<%= form_with(model: member, local: true) do |form| %>
  <%= form.hidden_field :member_type %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-container">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="input-container">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="textarea-container">
    <label for="member[details]">
        <% if member.member_type == 'candidate' %>
            Tell something about yourself<p>(Think about personal projects, hobbies, things you're proud of)</p>
        <% else %>
            Tell something you like developers to know about<p>(Projects, Culture, you name it)</p>
        <% end %>
    </label>
    <%= form.text_area :details %>
  </div>

  <div class="submit"><button type="submit">Submit</button></div>
<% end %>
